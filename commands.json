{
  "commands":
  {
    "version: major":
    {
      "fileName": "powershell.exe",
      "workingDirectory": ".",
      "arguments": "-ExecutionPolicy Bypass -NonInteractive -File build.ps1 version -Major"
    },
    "version: minor":
    {
      "fileName": "powershell.exe",
      "workingDirectory": ".",
      "arguments": "-ExecutionPolicy Bypass -NonInteractive -File build.ps1 version -Minor"
    },
    "version: patch":
    {
      "fileName": "powershell.exe",
      "workingDirectory": ".",
      "arguments": "-ExecutionPolicy Bypass -NonInteractive -File build.ps1 version -Patch"
    },
    "configure":
    {
      "fileName": "powershell.exe",
      "workingDirectory": ".",
      "arguments": "-ExecutionPolicy Bypass -NonInteractive -File build.ps1 configure"
    },
    "update":
    {
      "fileName": "powershell.exe",
      "workingDirectory": ".",
      "arguments": "-ExecutionPolicy Bypass -NonInteractive -File build.ps1 update"
    },
    "publish":
    {
      "fileName": "powershell.exe",
      "workingDirectory": ".",
      "arguments": "-ExecutionPolicy Bypass -NonInteractive -File build.ps1 publish"
    }
  },
  "-vs-binding":
  {
    "ProjectOpened":
    [
      "configure"
    ]
  }
}
